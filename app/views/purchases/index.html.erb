<div class="col-md-12">
  <h4 class="bold-title">My purchases</h4>
  <hr class="separator-section">
</div>
<% if @purchases.empty? %>
  <div class="row">
    <span>
      <h4 class="text-center">You don't have any purchases<br>
    </span>
  </div>
<% else %>
  <% @purchases.each do |purchase| %>
    <div class="row">
      <div class="col-md-12"></div>
      <span>Purchase date: <%= formatted_date(purchase.created_at) %></span>
      <table style="margin-bottom: 60px;" class="table table-striped table-hover">
        <tr>
          <th width='60%'>Name</th>
          <th width='20%'>Price</th>
          <th width='10%'>Quantity</th>
        </tr>
        <% purchase.purchase_items.each do |purchase_item| %>
        <tr>
          <td data-th="Name: "><%= purchase_item.name %></td>
          <td data-th="Price: "><%= purchase_item.price %></td>
          <td data-th="Quantity: "><%= purchase_item.quantity %></td>
        </tr>
        <% end %>
      </table>
    </div>
  <% end %>
<% end %>
