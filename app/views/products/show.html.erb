<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @product.name %></h3>
      <div class="row">
        <div class="col-12">
          <h4 class="box-title mt-5">Product description</h4>
            <p id="descrption-text"><%= @product.description %></p>
            <div class="row">
              <h4 class="col-8">$<%= @product.price %></h4>
              <h4 id="stock-text" class="col-4">Stock: <%= @product.stock %></h4>
            </div>
            <% if @product_in_cart %>
              <%= button_to "Remove from cart", remove_product_carts_path(product_id: @product.id), class: 'btn btn-danger btn-rounded text-white col-4' %>
            <% else %>
              <% if @product.stock.zero? %>
                <button class='btn btn-primary btn-rounded text-white col-4' disabled>Out of stock</button>
              <% else %>
                <%= button_to "Add to cart", add_product_carts_path(product_id: @product.id), class: 'btn btn-primary btn-rounded text-white col-4'%>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>