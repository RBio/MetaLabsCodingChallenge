<row>
  <% if @products.empty? %>
  <div class="row">
    <span>
      <span class="fa fa-gift no-activated"></span>
      <span class="fa fa-times campaign-square-glyphcon red-cross-active-color"></span>
      <h4 class="text-center"> Â¡No cuenta con negocios!<br>
    </span>
  </div>
  <% else %>

  <table style="margin-bottom: 60px;" class="table table-striped table-hover">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
      <td data-th="Name: "><%= product.name %></td>
      <td data-th="Price: "><%= product.price %></td>
      <td data-th="Actions: ">
        <%= link_to(product_path(product.id)) do %>
          <i class="fa fa-eye"></i>
        <% end %>
        <%= link_to(product_path(product.id)) do %>
          <i class="fa fa-shopping-cart "></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  <% end %>
</row>

